<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.tyr.ui.view.TopBar
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_title_height"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/login_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/top_bar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_frame"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:paddingTop="35dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名 : "
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:singleLine="true"
                android:ems="10"
                android:paddingLeft="20dp"
                android:text="22125112"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密   码 : "
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:singleLine="true"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:text="abc"
                android:textColor="@color/black" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地   址 : "
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/socket_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:singleLine="true"
                android:ems="10"
                android:paddingLeft="20dp"
                android:text="192.168.42.95"
                android:textColor="@color/black" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="端   口 : "
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/socket_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:singleLine="true"
                android:ems="10"
                android:paddingLeft="20dp"
                android:text="8888"
                android:inputType="numberDecimal"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_container"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_button_bg" />
    </LinearLayout>

</RelativeLayout>